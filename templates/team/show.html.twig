{% extends 'base.html.twig' %}

{% block title %}Team{% endblock %}

{% block body %}
    <h1>Team</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ team.name }}</td>
            </tr>
            <tr>
                <th>Trainer</th>
                <td>{{ team.trainer.username }}</td>
            </tr>
            <tr>
                <th>Pokemons</th>
                <td>
                    
                    {% for pokemon in team.pokemons %}
                        <a href="{{ path('app_pokemon_show', {'id': pokemon.id}) }}">
                        <img src="{{ asset('uploads/' ~ pokemon.img) }}" width="80" alt="{{ pokemon.name }}"></a>
                    {% endfor %}   
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_team_index') }}">back to list</a>

    <a href="{{ path('app_team_edit', {'id': team.id}) }}">edit</a>

    {{ include('team/_delete_form.html.twig') }}
{% endblock %}
