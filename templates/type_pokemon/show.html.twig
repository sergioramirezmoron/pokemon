{% extends 'base.html.twig' %}

{% block title %}TypePokemon{% endblock %}

{% block body %}
    <h1>TypePokemon</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ type_pokemon.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ type_pokemon.name }}</td>
            </tr>
        </tbody>
    </table>

    {% if type_pokemon.pokemon is not empty %}
        <ul>
            {% for pokemon in type_pokemon.pokemon %}
                <a href="/pokemon/{{pokemon.id}}"><img src="{{ asset('uploads/' ~ pokemon.img) }}" alt="{{ pokemon.name }}" width="50" height="50"></a>
            {% endfor %}
        </ul>
    {% endif %}

    <a href="{{ path('app_type_pokemon_index') }}">back to list</a>

    <a href="{{ path('app_type_pokemon_edit', {'id': type_pokemon.id}) }}">edit</a>

    {{ include('type_pokemon/_delete_form.html.twig') }}
{% endblock %}
